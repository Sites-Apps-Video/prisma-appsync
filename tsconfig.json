{
    "compilerOptions": {
        "baseUrl": ".",
        "types": ["jest", "node", "lodash"],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "allowJs": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false,
        "paths": {
            "~/*": ["src/*"]
        }
    },
    "exclude": ["dist", "node_modules"]
}
